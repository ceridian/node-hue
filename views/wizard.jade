extends layout

block content
  div
    nav.navbar.navbar-inverse(role='navigation')
        .container-fluid
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
            a.navbar-brand(href='#') Node-Hue
          #bs-example-navbar-collapse-1.collapse.navbar-collapse
            ul.nav.navbar-nav
              li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                  | Menu
                  span.caret
                ul.dropdown-menu(role='menu')
                  li
                    a(href='#') WIP
                  li.divider
            ul.nav.navbar-nav.navbar-right
              li
                a(href='#') #{ user }
  div
    form(role="form")
      .form-group
        .radio
          label
            input(type='radio' name='IPorName' id='setup_name' value='name')
            Hostname
        .radio
          label
            input(type='radio' name='IPorName' id='setup_ip' value='ip')
            IP Address
      .form-group
        label(for="hosts") Hostnames or IP Addresses
        textarea(class="form-control" rows="5")
        